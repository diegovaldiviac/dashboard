{
  "plugins": [ "eslint-plugin-react" ],
  "extends": [
    "plugin:eslint-plugin-react/recommended",
    "eslint:recommended"
  ],
  "rules": {
    "no-console": "off",
    "indent": ["error", 2]
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "18.0.0"
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "max-len": ["error", {"code": 120}]
      }
    }
  ]
}